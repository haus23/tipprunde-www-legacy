{
  "name": "foh",
  "version": "0.0.0",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "pnpm run build:css && remix build",
    "build:css": "tailwindcss -m -c ./tailwind.config.cjs -i ./styles/app.css -o app/styles/app.css",
    "dev:foh": "concurrently \"pnpm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -c ./tailwind.config.cjs -i ./styles/app.css -o app/styles/app.css"
  },
  "dependencies": {
    "@haus23/dtp-types": "workspace:*",
    "@headlessui/react": "^1.7.8",
    "@heroicons/react": "^2.0.14",
    "@radix-ui/react-accordion": "^1.1.0",
    "@radix-ui/react-dialog": "^1.0.2",
    "@radix-ui/react-dropdown-menu": "^2.0.2",
    "@radix-ui/react-select": "^1.2.0",
    "@radix-ui/react-tooltip": "^1.0.3",
    "@remix-run/node": "^1.11.1",
    "@remix-run/react": "^1.11.1",
    "@remix-run/vercel": "^1.11.1",
    "@vercel/node": "^2.8.16",
    "framer-motion": "^8.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.11.1",
    "@remix-run/eslint-config": "^1.11.1",
    "@remix-run/serve": "^1.11.1",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "concurrently": "^7.6.0",
    "eslint": "^8.32.0",
    "radix-colors-plugin": "workspace:*",
    "tailwindcss": "^3.2.4",
    "typescript": "~4.9.4"
  }
}
